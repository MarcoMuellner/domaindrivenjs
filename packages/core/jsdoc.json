{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js$",
    "excludePattern": "(node_modules/|docs|dist)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "readme": "../README.md"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  }
}